<% if @todo.errors.any? %>
<h2>The following errors prevented the page from being saved.</h2>
<ul>
    <%= @todo.errors.full_messages do |message| %>
   <li><%= message %></li>
    <% end %>
</ul>
<% end %>
<%= form_for @todo do |f| %>

<p>
   <%= f.label :name %> <br>
   <%= f.text_field :name %>
</p>

<p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
</p>

<p>
    <%= f.submit %>
</p>
<% end %>
<%= link_to "Back to Listing", todos_path %>